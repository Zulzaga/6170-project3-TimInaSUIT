<!--to fill with companies-->
<div class="container">
    <div class = "row companies">
        {{#each message}}
            <div class='a-company' id={{name}} data-company-id={{_id}}>
                <h5> <a name={{name}} href="#" class="selected-company"> {{name}}</a></h5>
                <hr>
                <p> {{about}} <p>
                <br>
            </div>
        {{/each}}
    </div>
</div>
