    <div class='container'>
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Welcome to TIM in a Suit!</a>
      </div>
          <div class="collapse navbar-collapse" id="example-navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
